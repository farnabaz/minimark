{
  "name": "minimark",
  "type": "module",
  "version": "0.2.0",
  "packageManager": "pnpm@10.28.2",
  "description": "MiniMark is a minimal representation of Abstract Syntax Trees (AST)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/farnabaz/minimark.git"
  },
  "exports": {
    ".": "./dist/index.mjs",
    "./hast": "./dist/hast.mjs",
    "./stringify": "./dist/stringify.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitest",
    "prepack": "obuild",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit",
    "verify": "npm run lint && npm run test && npm run typecheck",
    "release": "release-it"
  },
  "devDependencies": {
    "@nuxt/eslint-config": "^1.13.0",
    "@nuxtjs/mdc": "^0.20.0",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.0.10",
    "eslint": "^9.39.2",
    "obuild": "^0.4.20",
    "release-it": "^19.2.4",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "js-yaml": "^4.1.1"
  }
}
